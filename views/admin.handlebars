<section id="galery-admin">
    <div class="container header-fix">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h2>Collapsible Panel</h2>
                    <p>Click on the collapsible panel to open and close it.</p>
                </div>
            </div>

            <div class="row">
                <div class="col-md-2">
                    <!-- Trigger the modal with a button -->
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Add Image</button>

                    <!-- Modal -->
                    <div id="myModal" class="modal fade" role="dialog">
                        <div class="modal-dialog">

                            <!-- Modal content-->
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    <h4 class="modal-title">Modal Header</h4>
                                </div>
                                <div class="modal-body">

                                    <form id="upload-image" method="post" enctype="multipart/form-data">
                                        <div class="form-group">
                                            <label>Upload Image</label>
                                            <div class="input-group">
                                                <span class="input-group-btn">
                                                <span class="btn btn-default btn-file">
                                                        Browseâ€¦ <input type="file" name="galery-image" id="imgInp">
                                                </span>
                                                </span>
                                                <input type="text" name="img-url" class="form-control" readonly>
                                            </div>
                                            <img id='img-upload' />
                                        </div>

                                        <div class="row">
                                            <div class="col-md-2">
                                                <button type="submit" id="upload-image-submit" class="btn btn-primary">Upload</button>
                                            </div>

                                            <div class="col-md-offset-8 col-md-2">
                                                <div class="pull-right">
                                                    <div class="loader" style="display: none"></div>
                                                </div>
                                            </div>
                                        </div>
                                    </form>

                                </div>
                                <div class="modal-footer">
                                    <button class="btn btn-default" data-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-md-12">
                    <div class="panel-group">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title">
                                    <a data-toggle="collapse" href="#collapse1">Collapsible panel</a>
                                </h4>
                            </div>
                            <div id="collapse1" class="panel-collapse collapse">
                                <div class="galery-admin-panel">
                                    <div class="panel-body">
                                        <table class="table table-striped">
                                            <thead>
                                                <tr>
                                                    <th>#</th>
                                                    <th>Name</th>
                                                    <th>Preview</th>
                                                    <th>Options</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {{#each images}}
                                                <tr>
                                                    <th scope="row">{{@index}}</th>
                                                    <td>
                                                        <strong>{{this.Name}}</strong>
                                                    </td>
                                                    <td class="img-preview-container">
                                                        <img src="{{this.Url}}" class="img-preview" id="js-img-{{@index}}" alt="{{this.Name}}">
                                                    </td>
                                                    <td>
                                                        <button type="button" id="js-btn-remove-{{@index}}" class="btn btn-danger" js-img-id="{{@index}}">Remove</button>
                                                    </td>
                                                </tr>
                                                {{/each}}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="panel-footer">Panel Footer</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>