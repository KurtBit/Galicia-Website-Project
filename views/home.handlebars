<section id="contacts" class="js-contacts">
    <header>
        <h2>Контакти</h2>
    </header>
    <form method="POST" id="contact-form">

        <div class="container-fluid">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">

                    <div class="form-group">
                        <label for="contacts-form-name"><span class="required-star">*</span>Име:</label>
                        <input type="text" class="form-control" name="contacts-name" id="contacts-form-name">
                    </div>

                    <div class="form-group">
                        <label for="contacts-form-email"><span class="required-star">*</span>И-мейл:</label>
                        <input type="email" class="form-control" name="contacts-email" id="contacts-form-email">
                    </div>

                    <div class="form-group">
                        <label for="contacts-form-phone"><span class="required-star">*</span>Телефон:</label>
                        <input type="tel" class="form-control" name="contacts-phone" id="contacts-form-phone">
                    </div>

                </div>
            </div>
        </div>

        <div class="container-fluid">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <div class="form-group">
                        <label for="contacts-form-content"></label>
                        <textarea class="form-control" rows="8" name="contacts-content" id="contacts-form-content" placeholder="Напишете вашето съобщение тук!"></textarea>

                        <div class="row">
                            <div class="col-xs-12">
                                <div id="captcha" class="g-recaptcha embed-responsive-16by9 center-block" data-sitekey="6Lc8LxkUAAAAAC0x-oLU_n5oUXxxBjTUIOpwhHSm"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="container-fluid">
            <div class="row">
                <div class="col-xs-12">
                    <input type="submit" value="Изпрати" class="btn btn-lg btn-default" id="contacts-form-submit">
                </div>
            </div>
        </div>

    </form>
</section>

