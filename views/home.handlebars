<section id="gallery" class="js-gallery">
    <header>
        <h2>Галерия</h2>
    </header>
    <div class="container-fluid">
        <div id="main_area">
            <!-- Slider -->
            <div class="row">
                <div class="col-sm-6" id="slider-thumbs">
                    <!-- Bottom switcher of slider -->
                    <ul class="hide-bullets">
                        {{#each images}}
                        <li class="col-sm-3">
                            <a class="thumbnail" id="carousel-selector-{{@index}}">
                                <img class="gallery-left" src="{{this.Url}}" alt="{{this.Name}}">
                            </a>
                        </li>
                        {{/each}}
                    </ul>
                </div>
                <div class="col-sm-6">
                    <div class="col-sm-12" id="slider">
                        <!-- Top part of the slider -->
                        <div class="row">
                            <div class="col-sm-12" id="carousel-bounding-box">
                                <div class="carousel slide" id="myCarousel">
                                    <!-- Carousel items -->
                                    <div class="carousel-inner" id="js-gallery-carousel">
                                        {{#each images}}
                                        <div class="item" data-slide-number="{{@index}}">
                                            <img src="{{this.Url}}" alt="{{this.Name}}">
                                        </div>
                                        {{/each}}
                                    </div>
                                    <!-- Carousel nav -->
                                    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                                        <span class="glyphicon glyphicon-chevron-left"></span>
                                    </a>
                                    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                                        <span class="glyphicon glyphicon-chevron-right"></span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--/Slider-->
            </div>

        </div>
    </div>
</section>

